model Spin {
  id         String   @id @default(uuid())
  spinValue1 Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("spin")
}

model SpinHistory {
  id        String   @id @default(uuid())
  userId    String
  result    Int
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
