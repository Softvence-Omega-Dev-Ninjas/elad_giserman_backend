model BusinessProfile {
  id String @id @default(uuid())

  // Basic Info
  title       String
  description String?
  location    String
  isActive    Boolean @default(true)

  // Business hours
  openingTime String // e.g., "11:00 AM"
  closingTime String // e.g., "10:00 PM"

  // Gallery (images)
  gallery FileInstance[]

  // Offers
  offers      Offer[]
  categoryId  String?
  profileType Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  // Owner / organizer
  ownerId     String       @unique // unique makes one to one relation
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  reviews     Review[]
  reedemOffer ReedemaOffer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("business_profiles")
}

enum ProfileType {
  CAFE
  RESTURANTES
  BAR
}
